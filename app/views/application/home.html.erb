<section id="land1" class="full">
  <div>
    <h1>
      <small class="museo">The</small> Blooming Lab
      <%= image_tag "logo_landing.svg", alt: nil %>
    </h1>
    <%= t('home.subtitle') %>
    <a class="next" href="#land2"></a>
  </div>
  <footer>
    <%= t('home.land1_footer').html_safe %>
  </footer>
</section>

<section id="land2" class="full">
  <div class="text-container">
    <h2><%= t('home.land2_title') %></h2>
    <%= simple_format t('home.land2_content').html_safe %>
    <a class="next" href="#menu"></a>
  </div>
</section>

<%= render 'menu', direct: true %>

