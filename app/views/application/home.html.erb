    <div class="collapse row" id="moreApproach">
      <div class="col-md-4">
        <div class="card">
          <h3><%= t 'home.approach_c1_title' %></h3>
          <div class="scroll-y">
            <%= simple_format t('home.approach_c1_content') %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <h3><%= t 'home.approach_c2_title' %></h3>
          <div class="scroll-y">
            <%= simple_format t('home.approach_c2_content') %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <h3><%= t 'home.approach_c3_title' %></h3>
          <div class="scroll-y">
            <%= simple_format t('home.approach_c3_content') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

